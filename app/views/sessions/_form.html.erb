<%= form_for :session, url: session_path, html:{class: 'ui form'} do |form| %>
  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>

  <div class="field">
    <div class="ui left icon input">
      <%= form.text_field :email, type: 'email', placeholder: '电子邮件' %>
      <i class="mail outline icon"></i>
    </div>
  </div>

  <div class="field">
    <div class="ui left icon input">
      <%= form.password_field :password, placeholder: '密码' %>
      <i class="privacy outline icon"></i>
    </div>
  </div>

  <div class="field">
    <%= form.submit '登陆', class: 'login-btn' %>
  </div>
  <%= link_to t(".sign_up"), sign_up_path %>
<% end %>